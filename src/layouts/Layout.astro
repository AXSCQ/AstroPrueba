---
import "../assets/styles/tailwind.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
      name="description"
      content="Axel Simon Condori - Desarrollador & MÃºsico"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body class="bg-cyber-950 text-white/90 font-light">
    <div class="fixed inset-0 bg-gradient-to-br from-neon-blue/5 via-neon-purple/5 to-neon-pink/5"></div>
    <div class="relative z-10">
      <main>
        <slot />
      </main>
    </div>

    <!-- AOS Script -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 800,
        once: true,
      });
    </script>
  </body>
</html>
