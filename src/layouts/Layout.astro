---
import "../assets/styles/tailwind.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
      name="description"
      content="Axel Simon Condori - Desarrollador & Músico"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preload crítico para mejorar performance -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="https://unpkg.com/aos@next/dist/aos.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    
    <!-- Preload de JS crítico -->
    <link rel="preload" href="https://unpkg.com/aos@next/dist/aos.js" as="script">
    
    <!-- DNS prefetch para dominios externos -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//unpkg.com">
    <!-- CSS crítico en noscript para fallback -->
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap">
      <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css">
    </noscript>
  </head>
  <body class="bg-cyber-950 text-white/90 font-light">
    <div class="fixed inset-0 bg-gradient-to-br from-neon-blue/5 via-neon-purple/5 to-neon-pink/5"></div>
    <div class="relative z-10">
      <main>
        <slot />
      </main>
    </div>

    <!-- Performance Optimizer Script (lazy load AOS y otros recursos) -->
    <script src="/src/scripts/performance-optimizer.js" type="module" defer></script>
    
    <!-- AOS inicial solo si es crítico, sino se carga lazy -->
    <noscript>
      <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
      <script>
        if (window.AOS) {
          AOS.init({ duration: 800, easing: "ease-out-cubic", once: true, offset: 50 });
        }
      </script>
    </noscript>
  </body>
</html>
