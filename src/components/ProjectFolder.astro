---
interface Props {
  title: string;
  description: string;
  technologies: string[];
  link: string;
}

const { title, description, technologies, link } = Astro.props;
---

<div class="group relative perspective-1000">
  <div class="relative transform transition-all duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]">
    <!-- Frente de la tarjeta -->
    <div class="min-h-[300px] bg-dark-800/50 backdrop-blur-sm rounded-xl p-6 border border-warm-500/10">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-warm-500/10 to-transparent rounded-xl"></div>
      <div class="relative z-10">
        <h3 class="text-xl font-bold text-warm-300 mb-3">{title}</h3>
        <p class="text-gray-400 mb-4 line-clamp-2">{description}</p>
        <div class="flex flex-wrap gap-2">
          {technologies.map(tech => (
            <span class="px-2 py-1 text-xs bg-warm-900/50 text-warm-300 rounded-full">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>

    <!-- Reverso de la tarjeta -->
    <div class="absolute inset-0 h-full w-full [transform:rotateY(180deg)] [backface-visibility:hidden]">
      <div class="flex items-center justify-center h-full bg-dark-800/50 backdrop-blur-sm rounded-xl border border-warm-500/10">
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-warm-500 text-white rounded-full hover:bg-warm-600 transition-colors"
        >
          Ver Proyecto
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
