<style>
  .hover-shadow-card {
    transition:
      transform 0.3s,
      box-shadow 0.3s,
      background-color 0.3s;
  }

  /* Deshabilitar transformaciones en dispositivos móviles para mejor rendimiento */
  @media (min-width: 768px) {
    .hover-shadow-card:hover {
      transform: translateY(-5px);
      box-shadow:
        0 10px 25px -5px rgba(0, 0, 0, 0.3),
        0 0 15px -5px var(--shadow-color, rgba(0, 243, 255, 0.5));
    }

    .social-link-optimized:hover {
      transform: translateY(-5px);
    }
  }

  /* Mantener sombras más ligeras para todos los dispositivos */
  .hover-shadow-card:hover {
    background-color: rgba(26, 26, 36, 0.7);
  }

  .contact-card-optimized[data-type="email"]:hover {
    --shadow-color: rgba(0, 243, 255, 0.5);
  }

  .contact-card-optimized[data-type="whatsapp"]:hover {
    --shadow-color: rgba(25, 195, 125, 0.5);
  }

  .contact-card-optimized[data-type="ubicacion"]:hover {
    --shadow-color: rgba(255, 0, 255, 0.5);
  }

  .social-link-optimized {
    position: relative;
    transition: transform 0.3s;
  }

  /* Estilo para tarjetas expandidas en móvil */
  .mobile-expanded .max-h-0 {
    max-height: 500px !important;
    opacity: 1 !important;
    transition:
      max-height 0.5s,
      opacity 0.3s;
  }
</style>

<script>
  // Optimizar el comportamiento de las tarjetas de contacto
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll<HTMLElement>(
      ".contact-card-optimized",
    );

    // Detectar si estamos en un dispositivo móvil
    const isMobile = window.innerWidth < 768;

    cards.forEach((card) => {
      // Expandir tarjeta al hacer clic para dispositivos móviles
      card.addEventListener("click", function (this: HTMLElement) {
        if (isMobile) {
          this.classList.toggle("mobile-expanded");

          if (this.classList.contains("mobile-expanded")) {
            const allSections = this.querySelectorAll<HTMLElement>(".max-h-0");
            allSections.forEach((section: HTMLElement) => {
              if (section.scrollHeight) {
                section.style.maxHeight = `${section.scrollHeight}px`;
                section.style.opacity = "1";
              }
            });
          } else {
            const allSections = this.querySelectorAll<HTMLElement>(
              ".group-hover\\:max-h-32, .group-hover\\:max-h-96",
            );
            allSections.forEach((section: HTMLElement) => {
              section.style.maxHeight = "0";
              section.style.opacity = "0";
            });
          }
        }
      });

      // Precarga de las secciones expandibles para móviles
      if (isMobile && card.querySelector(".max-h-0")) {
        const sections = card.querySelectorAll<HTMLElement>(".max-h-0");
        sections.forEach((section) => {
          // Almacena la altura pero mantiene oculto
          section.dataset.height = section.scrollHeight + "px";
        });
      }
    });
  });
</script>
