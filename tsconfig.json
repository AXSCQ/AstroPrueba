{
  "compilerOptions": {
    "baseUrl": "./src",  
    "paths": {
      "~/*": ["./*"], 
    },
    "strict": true, 
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
